{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "incremental": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ES2020",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "paths": {
      "~/*": ["./app/*"],
      "/*": ["./*"]
    },
    "noEmit": true
  }
}
