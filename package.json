    "remix": "^1.0.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.3",
    "@types/react-dom": "^17.0.9",
    "@types/react": "^17.0.24",
    "autoprefixer": "10.4.0",
    "cssnano": "5.0.11",
    "pm2": "5.1.2",
    "postcss-cli": "9.0.2",
    "postcss": "8.4.1",
    "tailwindcss": "2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
