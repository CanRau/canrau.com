  "scripts": {
    "build": "yarn build:css && remix build",
    "prebuild": "yarn clean && echo All clean âœ¨",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:remix\"",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:max": "NODE_OPTIONS=--max_old_space_size=4096 yarn dev",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "generate-ogimages": "node ./utils/generate-ogimages.js single",
    "postinstall": "remix setup node",
    "deploy": "yarn deploy:local -- --remote-only",
    "deploy:local": "yarn build && fly deploy --no-cache --build-arg COMMIT_SHA=\"$(git rev-parse --short HEAD)\"",
    "start": "remix-serve build",
    "tree": "tree -I \"node_modules|build|content\"",
    "docker": "yarn docker:down && yarn docker:up",
    "docker:up": "docker-compose --file compose.ignored.yml up --build",
    "docker:down": "docker-compose --file compose.ignored.yml down",
    "clean": "rimraf .cache ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\""
  },
